<resources>

    <!-- Base application theme. -->
    <style name="LoyaltyManagerTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/LoyaltyManagerTheme.ActionBarStyle</item>
        <item name="actionBarStyle">@style/LoyaltyManagerTheme.ActionBarStyle</item>
        <item name="android:dialogTheme">@style/LoyaltyManagerTheme.DialogTheme</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LoyaltyManagerTheme.ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/appPrimaryColor</item>
        <item name="background">@color/appPrimaryColor</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="LoyaltyManagerTheme.DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowTitleBackgroundStyle">@style/LoyaltyManagerTheme.DialogTheme.Background</item>
    </style>
    <style name="LoyaltyManagerTheme.DialogTheme.Background">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_close</item>
    </style>

</resources>
